#!/bin/bash

set -e

BUILD_DIR=$1
CACHE_DIR=$2
APT_DIR=$BUILD_DIR/.apt

arrow() {
  sed -u 's/^/-----> /'
}

echo "LibreOffice: Setting PATH" | arrow
PROFILE_PATH="$BUILD_DIR/.profile.d/libreoffice.sh"
mkdir -p $(dirname $PROFILE_PATH)

# add vendor binaries to the path
echo 'export OFFICE_PATH="$HOME/.apt/usr/lib/libreoffice"' >> $PROFILE_PATH

cp -rv $APT_DIR/usr/lib/x86_64-linux-gnu/mesa/libGL.so.1 $APT_DIR/usr/lib/x86_64-linux-gnu/libGL.so.1
cp -rv $APT_DIR/usr/lib/libreoffice/program/*.so $APT_DIR/usr/lib/x86_64-linux-gnu

